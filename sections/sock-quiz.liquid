{% comment %}
  Sock Finder Quiz Section
  This section can be embedded in any page template

  Usage:
  1. Add this section to your theme's sections folder
  2. Include in a page template with: {% section 'sock-quiz' %}
  3. Or render directly: {% render 'sock-quiz' %}
{% endcomment %}

{%- style -%}
  .sock-quiz-section {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
  }
  .sock-quiz-container {
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }
{%- endstyle -%}

<div class="sock-quiz-section">
  <div class="sock-quiz-container">
    {%- if section.settings.show_heading -%}
      <div style="text-align: center; margin-bottom: 2rem;">
        {%- if section.settings.heading != blank -%}
          <h1 style="font-size: 2rem; font-weight: 700; margin-bottom: 0.5rem;">
            {{ section.settings.heading }}
          </h1>
        {%- endif -%}
        {%- if section.settings.subheading != blank -%}
          <p style="color: #64748b; font-size: 1.125rem;">
            {{ section.settings.subheading }}
          </p>
        {%- endif -%}
      </div>
    {%- endif -%}

    <!-- Quiz Container -->
    <div id="sock-quiz"></div>
  </div>
</div>

<!-- Load Quiz Config -->
{% render 'sock-quiz-config' %}

<!-- Load Quiz Styles -->
{{ 'sock-quiz.css' | asset_url | stylesheet_tag }}

<!-- Load Quiz Script -->
{{ 'sock-quiz.js' | asset_url | script_tag }}

{% schema %}
{
  "name": "Sock Finder Quiz",
  "tag": "section",
  "class": "sock-quiz-section-wrapper",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_heading",
      "label": "Show heading",
      "default": true
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Find Your Perfect Socks"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Answer a few quick questions and we'll match you with the ideal socks for your activity."
    },
    {
      "type": "range",
      "id": "max_width",
      "min": 400,
      "max": 1200,
      "step": 50,
      "default": 600,
      "label": "Quiz max width (px)"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 40,
      "label": "Padding top (px)"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 40,
      "label": "Padding bottom (px)"
    }
  ],
  "presets": [
    {
      "name": "Sock Finder Quiz"
    }
  ]
}
{% endschema %}
