{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .quiz-cta {
    background-color: var(--pp-light-grey);
    color: var(--pp-black);
    text-align: center;
    position: relative;
    overflow: hidden;
    border-radius: 24px; /* Ensure rounded corners */
  }

  .quiz-cta__content {
    position: relative;
    z-index: 2;
    max-width: 800px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .quiz-cta__heading {
    color: var(--pp-black);
    font-size: 3rem;
    margin-bottom: 1rem;
    line-height: 1.1;
  }
  
  @media screen and (min-width: 750px) {
    .quiz-cta__heading {
      font-size: 4.5rem;
    }
  }

  .quiz-cta__text {
    font-size: 1.2rem;
    margin-bottom: 2rem;
    opacity: 0.9;
  }

  .quiz-cta__bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
    opacity: 0.4;
  }
{%- endstyle -%}

<div class="quiz-cta section-{{ section.id }}-padding">
  {%- if section.settings.image != blank -%}
    {{ section.settings.image | image_url: width: 1500 | image_tag: loading: 'lazy', sizes: '100vw', widths: '375, 550, 750, 1100, 1500, 2000, 3000, 3840', class: 'quiz-cta__bg' }}
  {%- endif -%}

  <div class="quiz-cta__content">
    <h2 class="quiz-cta__heading">{{ section.settings.heading | escape }}</h2>
    <div class="quiz-cta__text">
      {{ section.settings.text }}
    </div>
    <a href="{{ section.settings.link }}" class="button button--primary">
      {{ section.settings.button_label | escape }}
    </a>
  </div>
</div>

{% schema %}
{
  "name": "Quiz CTA",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "default": "FIND YOUR PERFECT FIT",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "text",
      "default": "<p>Take our 30-second quiz to find the perfect socks for your sport.</p>",
      "label": "Text"
    },
    {
      "type": "text",
      "id": "button_label",
      "default": "TAKE THE QUIZ",
      "label": "Button Label"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Button Link"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background Image"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 80
    }
  ],
  "presets": [
    {
      "name": "Quiz CTA"
    }
  ]
}
{% endschema %}
