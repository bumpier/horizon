{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .apple-hero {
    position: relative;
    text-align: center;
    background-color: var(--pp-black); /* Fallback */
    color: var(--pp-white);
    min-height: 85vh; /* Tall hero */
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .apple-hero__bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }
  
  .apple-hero__bg img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .apple-hero__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.3); /* Subtle overlay for text readability */
    z-index: 1;
  }

  .apple-hero__content {
    position: relative;
    z-index: 2;
    max-width: 800px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .apple-hero__heading {
    font-size: 3.5rem;
    line-height: 1.1;
    margin-bottom: 1.5rem;
    color: var(--pp-white);
    text-shadow: 0 2px 10px rgba(0,0,0,0.2);
  }

  @media screen and (max-width: 749px) {
    .apple-hero__heading {
      font-size: 2.5rem;
    }
    .apple-hero__text {
      font-size: 1rem;
    }
  }

  @media screen and (min-width: 750px) {
    .apple-hero__heading {
      font-size: 5.5rem;
    }
  }

  .apple-hero__text {
    font-size: 1.3rem;
    color: rgba(255,255,255,0.9);
    margin-bottom: 2.5rem;
    line-height: 1.5;
    text-shadow: 0 1px 4px rgba(0,0,0,0.2);
  }
  
  .apple-hero__buttons {
    display: flex;
    justify-content: center;
    gap: 16px;
  }
  
  /* Invert button secondary for dark background */
  .apple-hero .button--secondary {
    border-color: #fff !important;
    color: #fff !important;
  }
  
  .apple-hero .button--secondary:hover {
     background: #fff !important;
     color: #000 !important;
  }

{%- endstyle -%}

<div class="apple-hero section-{{ section.id }}-padding">
  <div class="apple-hero__bg">
    {%- if section.settings.image != blank -%}
      {{ section.settings.image | image_url: width: 3840 | image_tag: 
        loading: 'eager', 
        widths: '550, 750, 1100, 1500, 2000, 3000, 3840',
        sizes: '100vw'
      }}
    {%- else -%}
      {{ 'lifestyle-1' | placeholder_svg_tag: 'apple-hero__bg-placeholder' }}
    {%- endif -%}
  </div>
  
  <div class="apple-hero__overlay"></div>

  <div class="apple-hero__content">
    {%- if section.settings.heading != blank -%}
      <h2 class="apple-hero__heading">{{ section.settings.heading }}</h2>
    {%- endif -%}
    
    {%- if section.settings.text != blank -%}
      <div class="apple-hero__text">{{ section.settings.text }}</div>
    {%- endif -%}

    <div class="apple-hero__buttons">
      {%- if section.settings.button_label_1 != blank -%}
        <a href="{{ section.settings.button_link_1 }}" class="button button--primary">
          {{ section.settings.button_label_1 }}
        </a>
      {%- endif -%}
      {%- if section.settings.button_label_2 != blank -%}
        <a href="{{ section.settings.button_link_2 }}" class="button button--secondary">
          {{ section.settings.button_label_2 }}
        </a>
      {%- endif -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Apple Style Hero",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "default": "Performance. Personalized.",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "text",
      "default": "<p>Stop guessing. Start performing.</p>",
      "label": "Text"
    },
    {
      "type": "header",
      "content": "Buttons"
    },
    {
      "type": "text",
      "id": "button_label_1",
      "default": "Take the Quiz",
      "label": "Button Label 1"
    },
    {
      "type": "url",
      "id": "button_link_1",
      "label": "Button Link 1"
    },
    {
      "type": "text",
      "id": "button_label_2",
      "default": "How it Works",
      "label": "Button Label 2"
    },
    {
      "type": "url",
      "id": "button_link_2",
      "label": "Button Link 2"
    },
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Hero Shot"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 80
    }
  ],
  "presets": [
    {
      "name": "Apple Style Hero"
    }
  ]
}
{% endschema %}
